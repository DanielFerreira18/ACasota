@page
@model ACasotaBlazorServer.Areas.Identity.Pages.Account.LoginModel
@{
	ViewData["Title"] = "Login";
}

<div class="text-center text-md-center mb-4 mt-md-0">
	<h1 class="mb-0 h3">@ViewData["Title"]</h1>
</div>
<form class="mt-4" runat="server" method="post">
	<!-- Form -->
	<div class="form-group mb-4">
		<label for="email">Email</label>
		<div class="input-group">
			<span class="input-group-text" id="basic-addon1">
				<svg class="icon icon-xs text-gray-600" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path></svg>
			</span>
			<input asp-for="Input.Email" type="email" class="form-control" placeholder="exemplo@exemplo.com" id="email" autofocus required>
		</div>
	</div>
	<!-- End of Form -->
	<div class="form-group">
		<!-- Form -->
		<div class="form-group mb-4">
			<label for="password">Password</label>
			<div class="input-group">
				<span class="input-group-text" id="basic-addon2">
					<svg class="icon icon-xs text-gray-600" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path></svg>
				</span>
				<input asp-for="Input.Password" type="password" placeholder="Password" class="form-control" id="password" required>
				@if (ViewData["Errors"] != null)
				{
					<div class="invalid-feedback" id="erroremail" style="display:block">@ViewData["Errors"]</div>
				}
			</div>
		</div>
		<!-- End of Form -->
		<div class="d-flex justify-content-between align-items-top mb-4">
			<div class="form-check">
				<input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" value="false" onchange="this.value=true" id="remember">
				<label class="form-check-label mb-0" for="remember">
					Lembra-me
				</label>
			</div>
			<div><a href="./forgot-password.html" class="small text-right">Esqueceu-se da password?</a></div>
		</div>
	</div>
	<div class="d-grid">
		<button type="submit" class="btn btn-gray-800">Login</button>
	</div>
</form>
<div class="d-flex justify-content-center align-items-center mt-4">
	<span class="fw-normal">
		Não tem conta?
		<a href="/Identity/Account/Register" class="fw-bold">Crie Conta</a>
	</span>
</div>
