@page
@model ACasotaBlazorServer.Areas.Identity.Pages.Account.RegisterModel
@{
	ViewData["Title"] = "Register Account";
}

<div class="text-center text-md-center mb-4 mt-md-0">
	<h1 class="mb-0 h3">@ViewData["Title"]</h1>
</div>
<form class="mt-4" method="post">
	<div class="form-group">
		<!-- Form -->
		<div class="form-group mb-4">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<label for="Input.FirstName" class="first-name">Fist Name</label>
			<label for="Input.LastName">Last Name</label>
			<div class="input-group input-left">
				<span class="input-group-text" id="basic-addon1">
					<svg class="icon icon-xs text-gray-600" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M10 8a3 3 0 100-6 3 3 0 000 6zM3.465 14.493a1.23 1.23 0 00.41 1.412A9.957 9.957 0 0010 18c2.31 0 4.438-.784 6.131-2.1.43-.333.604-.903.408-1.41a7.002 7.002 0 00-13.074.003z"></path></svg>
				</span>
				<input type="text" class="form-control" placeholder="First Name" onfocusout="checkFirstName()" id="firstname" autofocus required>
			</div>
			<div class="input-group input-right">
				<span class="input-group-text" id="basic-addon1">
					<svg class="icon icon-xs text-gray-600" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M10 8a3 3 0 100-6 3 3 0 000 6zM3.465 14.493a1.23 1.23 0 00.41 1.412A9.957 9.957 0 0010 18c2.31 0 4.438-.784 6.131-2.1.43-.333.604-.903.408-1.41a7.002 7.002 0 00-13.074.003z"></path></svg>
				</span>
				<input type="text" class="form-control" placeholder="Last Name" onfocusout="checkLastName()" id="lastname" required>
			</div>
		</div>
		<div class="form-group mb-4">
			<label for="Input.Data_Nasc">Birthday</label>
			<div class="input-group">
				<span class="input-group-text">
					<svg class="icon icon-xs text-gray-600" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
				</span>
				<input data-datepicker="" class="form-control" id="birthday" type="text" placeholder="dd/mm/yyyy" onfocusout="checkDate()" required>
				<input data-datepicker="" class="form-control" id="birthdays" type="text" placeholder="dd/mm/yyyy" onfocusout="checkDate()" hidden>
			</div>
		</div>
		<div class="form-group mb-4">
			<label for="email">Email Address</label>
			<div class="input-group">
				<span class="input-group-text" id="basic-addon1">
					<svg class="icon icon-xs text-gray-600" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path></svg>
				</span>
				<input asp-for="Input.Email" type="email" class="form-control" placeholder="example@example.com" id="email" onfocusout="checkEmail()" required>
			</div>
		</div>
		<!-- End of Form -->
		<!-- Form -->
		<div class="form-group mb-4">
			<label for="password">Your Password</label>
			<div class="input-group">
				<span class="input-group-text" id="basic-addon2">
					<svg class="icon icon-xs text-gray-600" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path></svg>
				</span>
				<input asp-for ="Input.Password" type="password" placeholder="Password" class="form-control" id="password" onkeyup="checkPassword()" required>
			</div>
		</div>
		<!-- End of Form -->
		<!-- Form -->
		<div class="form-group mb-4">
			<label for="confirm_password">Confirm Password</label>
			<div class="input-group">
				<span class="input-group-text" id="basic-addon2">
					<svg class="icon icon-xs text-gray-600" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path></svg>
				</span>
				<input type="password" placeholder="Confirm Password" class="form-control" id="confirm_password" onkeyup="checkConfPassword()" required>
			</div>
		</div>
		<!-- End of Form -->
		<div class="mb-4">
			<div class="form-check">
				<input class="form-check-input" type="checkbox" value="" id="remember" onclick="checkButton()">
				<label class="form-check-label fw-normal mb-0" for="remember">
					I agree to the <a href="#" class="fw-bold">terms and conditions</a>
				</label>
			</div>
		</div>
	</div>
	<div class="d-grid">
		<button type="submit" class="btn btn-gray-800" id="formButton" disabled>Sign up</button>
	</div>
</form>
<div class="d-flex justify-content-center align-items-center mt-4">
	<span class="fw-normal">
		Already have an account?
		<a href="./sign-in.html" class="fw-bold">Login here</a>
	</span>
</div>

<script>
	window.onload = (event) => {
		var elem = document.getElementById('birthday');
		var elem2 = document.getElementById('birthdays');

		var datepicker = new Datepicker(elem, {
			buttonClass: 'btn',
			format: 'dd/mm/yyyy',
			language: 'pt',
			autohide: true
		});

		var datepicker = new Datepicker(elem2, {
			buttonClass: 'btn',
			format: 'dd/mm/yyyy',
			autohide: true
		});
	};
</script>