                    <ul class="pagination mb-0">
                        <li class="page-item">
                            <a class="page-link" @onclick="() => ChargeViewArray(numberPageActive - 1)">Previous</a>
                        </li>
                        @foreach (var pageView in pageSelection)
                        {
