                            {
                                <li class="page-item active">
                                    <a class="page-link" @onclick="() => ChargeViewArray(pageView)">@pageView</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" @onclick="() => ChargeViewArray(pageView)">@pageView</a>
                                </li>
